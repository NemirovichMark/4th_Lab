            #region part 3 task 11
            Console.WriteLine("Введите n");
            int n = int.Parse(Console.ReadLine());
            Console.WriteLine("Введите m");
            int m = int.Parse(Console.ReadLine());
            int[][] f = new int[n][];
            for (int i = 0; i < n; i++)
                f[i] = new int[m];
            for (int i = 0; i < n; i++)
            {
                Console.WriteLine($"Введите элемент строки {i}");
                for (int j = 0; j < m; j++)
                {
                    f[i][j] = int.Parse(Console.ReadLine());
                }
            }
            int[] ff = new int[n];
            int cnt = 0;
            int cnt1 = 0;
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < m; j++)
                {
                    if (f[i][j] == 0)
                    {
                        ff[cnt1] = i;
                        cnt++;
                        cnt1++;
                        break;
                    }

                }
            }
            foreach (int i in ff)
                Console.Write(i + " ");
            Console.WriteLine();
            cnt1 = 0;
            int g = 1;
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < m; j++)
                {
                    if (i == ff[cnt1])
                    {
                        int temp = f[ff[cnt1]][j];
                        f[ff[cnt1]][j] = f[n - g][j];

                        f[n - g][j] = temp;



                    }
                }
            }
            for (int j = 0; j < m; j++)
            {
                if (f[0][j] == 0)
                {
                    int temp = f[0][j];
                    f[0][j] = f[n - 2][j];
                    f[n - 2][j] = temp;
                }
            }
            for (int i = 0; i < n - cnt; i++)
            {
                for (int j = 0; j < m; j++)
                {
                    Console.Write(f[i][j] + "\t ");
                }
                Console.WriteLine();
            }
            #endregion
        }
    }
